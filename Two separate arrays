#include <stdio.h>

int main()
{
    int arr[100], even[100], odd[100];
    int i, j = 0, k = 0, n;

    printf("Enter size of array: ");
    scanf("%d", &n);

    printf("Enter elements of array: ");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    for(i = 0; i < n; i++)
    {
        if(arr[i] % 2 == 0) //even number
        {
            even[j] = arr[i];
            j++;
        }
        else //odd number
        {
            odd[k] = arr[i];
            k++;
        }
    }

    printf("\nEven elements in array: ");
    for(i = 0; i < j; i++)
    {
        printf("%d ", even[i]);
    }

    printf("\nOdd elements in array: ");
    for(i = 0; i < k; i++)
    {
        printf("%d ", odd[i]);
    }

    return 0;
}
